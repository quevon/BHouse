<div id="<%= dom_id transaction %>">
  <%= current_tenant.balance %>

  <p class="my-5">
    <strong class="block font-medium mb-1">Tenant:</strong>
    <%= current_tenant.firstname %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Owner:</strong>
    <%= "#{transaction.owner.firstname} #{transaction.owner.balance}" %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= transaction.amount %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this transaction", transaction, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this transaction', edit_transaction_path(transaction), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
