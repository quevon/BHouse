    <%# <%= link_to "Edit Profile" , edit_owner_registration_path(current_owner)%> 

    

    <div class="main" id=main>
            <div class="cardBox">
                <div class="card">
                    <div>
                        <div class="numbers">20</div>
                        <div class="cardName">Tenants</div>
                    </div>
                    <div class="iconBox">
                        <ion-icon name="people-outline"></ion-icon>
                    </div>
                </div>
                <div class="card">
                    <div>
                        <%total_pending_tenants = 0%>
                        <%current_owner.properties.each do |property|%>
                            <%total_pending_tenants = total_pending_tenants + property.property_tenants.count%>
                        <% end %>
                        <div class="numbers"><%= total_pending_tenants %></div>
                        <div class="cardName">Pending Tenants</div>
                    </div>
                    <div class="iconBox">
                        <ion-icon name="people-circle-outline"></ion-icon>
                    </div>
                </div>
                <div class="card">
                    <div>
                        <div class="numbers"><%=current_owner.properties.count%></div>
                        <div class="cardName">Properties</div>
                    </div>
                    <div class="iconBox">
                        <ion-icon name="images-outline"></ion-icon>
                    </div>
                </div>
                  <div class="card">
                    <div>
                        <div class="numbers"><%=format_currency(current_owner.balance)%></div>
                        <div class="cardName">Balance</div>
                    </div>
                    <div class="iconBox">
                        <ion-icon name="cash-outline"></ion-icon>
                    </div>
                </div>
            </div>

            <div class="details">
                <div class="tenantRequest">
                    <div class="cardHeader">
                        <h2>Tenants Request<h2>
                    </div>
                        <table>
                            <thead>
                                <tr>
                                    <th>Tenant Firstname</th>
                                    <th>Tenant Lastname</th>
                                    <th>Type</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th colspan="2">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%current_owner.properties.each do |property|%>
                                    <% if property.property_tenants.count > 0%>
                                        <%property.property_tenants.each do |request|%>
                                            <tr>
                                                <td><%=request.tenant.firstname%></td>
                                                <td><%=request.tenant.lastname%></td>
                                                <td><%=request.property.listing_type%></td>
                                                <td><%=request.updated_at%></td>
                                                <td><%=request.status%></td>
                                                <td><%= link_to "Request Payment", request_payment_path(:property_tenant_id => request.id)%></td> 
                                                <td><%= link_to "Accept", update_property_tenant_path(request.property,:property_tenant => {:id => request.id, :status => "approved"}), :method => "patch" %></td>
                                                <td><%= link_to "Reject", update_property_tenant_path(request.property,:property_tenant => {:id => request.id, :status => "reject"}), :method => "patch" %></td>
                                            </tr>
                                        <%end%>
                                    <% end %>
                                <%end%>      
                            </tbody>
                        </table>
                    </div>
            
                <div class="recentTenants">
                    <div class="cardHeader">
                        <h2>List of Properties</h2>
                    </div>
                    <table>
                        <%current_owner.properties.each do |property|%>
                            <tr>
                                <td width="60px"><div class="imgBx"><%= image_tag property.image_url if property.image  %></div></td>
                                <td><h4><%=property.listing_type%><br><span><%=format_currency(property.monthly_price)%></span></h4></td>
                            </tr>                     
                        <%end%>      
                    </table> 
                </div>
            </div>     
        </div>

